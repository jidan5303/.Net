@model IEnumerable<ZeroHunger.EF.Assigned>

@{
    ViewBag.Title = "ConfirmedCollection";
}

<h2>ConfirmedCollection</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Employee Name
        </th>
        <th>
            Food Name
        </th>
        <th>
            Expire Date
        </th>
        <th>
            Restaurant Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food.ExpDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food.Restaurant.RestaurantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AssignDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
    </tr>
}

</table>
